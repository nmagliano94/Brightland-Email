        <mj-button mj-class="btn" href="https://brightland.co/" target="_blank" padding-bottom="40px">Explore Brightland</mj-button>
      </mj-column>
    </mj-section>
    <!-- END OF HEADER -->
    <mj-section background-color="#fff">
      <mj-column>
        <mj-text font-size="20px" line-height="32px" padding-top="22px" padding-bottom="5px">Let's hear it for the gorgeous plates our community has cooked up with Brightland - compliments to the chefs!</mj-text>
      </mj-column>
    </mj-section>
    <!-- START OF IMAGE SECTION -->
    <mj-section background-color="#fff">
      <mj-column>
        <mj-image src="https://i.postimg.cc/xjMm4qPq/img-line1.png" width="480px" alt="customers work shown on Instagram"></mj-image>
        <mj-image src="https://i.postimg.cc/xTQmDYs5/img-line2.png" width="480px" padding-top="20px" alt="customers work shown on Instagram"></mj-image>
        <mj-image src="https://i.postimg.cc/dt9yJXpY/img-line3.png" width="480px" padding-top="22px" padding-bottom="25px" alt="customers work shown on Instagram"></mj-image>
